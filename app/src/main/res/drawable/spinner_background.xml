<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Color -->
    <item>
        <shape>
            <solid android:color="#FEE3C8" /> <!-- Background color of your choice -->
        </shape>
    </item>

    <!-- Border (optional) -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Border color of your choice -->
            <corners android:radius="4dp" /> <!-- Corner radius of your choice -->
        </shape>
    </item>
</layer-list>
